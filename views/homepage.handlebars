{{#if loggedIn}}
    <h1>Welcome, {{username}}!</h1>
    {{else}}
    <h1>Welcome, guest!</h1>
{{/if}}

<div class="posts">
    {{#each posts as |post|}}
    <div class="post">
        <a href="/post/{{post.id}}"><h1>{{post.title}}</h1></a>
        <p>By: {{post.user.username}}</p>
        <p>{{post.content}}</p>
    </div>
    {{/each}}
</div>